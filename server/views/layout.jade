include ./mixins
doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/normalize.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css')
		meta(name="viewport" content="width=device-width, initial-scale=1")
		script(src='/javascripts/jquery-1.11.2.min.js')
		script(src='/javascripts/scripts.js')
		block head
	body
		.container
			.header
				.brand
					a(class='brand-text' href='/')
						img(src='/images/dap_logo_big.png' alt='logo' height=110)
				.animation

					.flip(id="flip")
						p(class="verify").
							Click to Sign in
					.panel(id="panel")
						.signin
							#gSignInWrapper
								#myButton
							a(href="login/" class="front") Sign in without google
						.signedin
							p account 
							br
							p settings	
				//-+navBar(true)
			block content
			.footer
				.images
					+clickImg('git', 'footer', 'https://github.com/AvocadosConstant/dap', '/images/github.svg')
					+clickImg('twitter', 'footer', '#', '/images/twitter.svg')
					+clickImg('facebook', 'footer', '#', '/images/facebook.svg')
				p(class='copyright') @2015 Michael Correale, Tim Hung, William Jagels