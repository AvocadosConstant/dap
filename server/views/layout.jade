include ./mixins
doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/normalize.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src='/javascripts/jquery-1.11.2.min.js')
		script(src='/javascripts/scripts.js')
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css')
	body
		.container
			.header
				.brand
					a(class='brand-text' href='/')
						h1 Dap
				+navBar(true)
			block content
			.footer
				.images
					+clickImg('git', 'footer', 'https://github.com/AvocadosConstant/dap', '/images/github.png')
					+clickImg('twitter', 'footer', '#', '/images/twitter_white.png')
					+clickImg('facebook', 'footer', '#', '/images/facebook.png')
				p(class='copyright') @2015 Michael Correale, Tim Hung, William Jagles
				