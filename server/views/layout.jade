include ./mixins
doctype html
html
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/normalize.css')
		link(rel='stylesheet', href='/stylesheets/style.css')
		script(src='/javascripts/jquery-1.11.2.min.js')
		script(src='/javascripts/scripts.js')
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(href='http://fonts.googleapis.com/css?family=Droid+Sans' rel='stylesheet' type='text/css')
		block head
	body
		.container
			.header
				.brand
					a(class='brand-text' href='/')
				.animation

					.flip(id="flip")
						p(class="verify").
							Click to Sign in
					.panel(id="panel")
						.signin
							form(method="post" action="/login")
								table
									tr
										th
											label(for="email") Email:
										td
											input(type="text" id="email" name="email")
									tr
										th
											label(for="password") Password:
										td
											input(type="password" id="password" name="password")
								input(type="submit" value="Submit")
							a(class="tiny" href="#s") Forgot password?
						.signedin
							p account 
							br
							p settings	
				//-+navBar(true)
			block content
			.footer
				.images
					+clickImg('git', 'footer', 'https://github.com/AvocadosConstant/dap', '/images/github.svg')
					+clickImg('twitter', 'footer', '#', '/images/twitter.svg')
					+clickImg('facebook', 'footer', '#', '/images/facebook.svg')
				p(class='copyright') @2015 Michael Correale, Tim Hung, William Jagels